{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es6",
      "esnext",
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/"
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
